                img(src="../assets/hoja_sencilla.svg", alt="Imagen de hoja sencilla").form__image
        .modal 
            .wholesaleModal
                img(src="../assets/close_button.svg", alt="Menú de hamburguesa").close_button 
                img(src="../assets/hojas_ppal.svg", alt="Imagen de hoja sencilla").form__image
                h1.distributorModal__title Regálanos tus datos y pronto nos pondremos en contacto contigo
                //<iframe src="https://docs.google.com/forms/d/e/1FAIpQLSf1puLzSvehJP_yky7VS1LicPtRsnWOdbtCKzSCrqyi7QWiwA/viewform?embedded=true" frameborder="0" marginheight="0" marginwidth="0">Cargando…</iframe>
                img(src="../assets/hojas_ppal.svg", alt="Imagen de hoja sencilla").form__image
        include componentes/_footer.pug
