mixin line(imgUrl, nombre, lineaUrl)
    .line
        img(loading="lazy" src=""+imgUrl, alt="Imagen de la línea"+nombre).line__image
        a(href=""+lineaUrl).line__container
            h4.line__container-subtitle Categoría
            h3.line__container-name #{nombre}
